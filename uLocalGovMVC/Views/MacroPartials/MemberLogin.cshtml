@model uLocalGovMVC.Models.ViewModels.MemberLoginModel
@if (User.Identity.IsAuthenticated)
{
    <p>Logged in: @User.Identity.Name</p>
    <p>@Html.ActionLink("Log out", "MemberLogout", "MemberLoginSurface")</p>
}
else
{
    using (Html.BeginUmbracoForm("MemberLogin", "MemberLoginSurface"))
    {
        <a class="login" href="#">Log in</a>
        <div id="login-panel" class="login-panel" style="display: none;">
            @Html.EditorFor(x => Model)
            <input type="submit" />
        </div>
    }
    <p>@TempData["Status"]</p>
}